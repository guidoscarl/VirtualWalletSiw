<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>VirtualWalletSiwIng</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.html</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Registrati</servlet-name>
    <servlet-class>servlets.SignupRED</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Registrati</servlet-name>
    <url-pattern>/sign-up</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Ricarica</servlet-name>
    <servlet-class>servlets.Recharge</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Ricarica</servlet-name>
    <url-pattern>/recharge</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Transazione</servlet-name>
    <servlet-class>servlets.Transaction</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Transazione</servlet-name>
    <url-pattern>/transaction</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>servlets.Logout</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
</web-app>